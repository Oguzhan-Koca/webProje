@using MvcProje.Models.Entity
@model List<Animal>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<br />

<h2 style="color:#8E44AD" > Evcil Hayvan Listesi</h2>
<table class="table table-bordered">
    <tr>
        <th>ID</th>
        <th>Hayvan Adı</th>
        <th>Hayvan Özellikleri</th>
        <th>Hayvan Yaş</th>
        <th>Hayvan Fotoğraf/th>
        <th>İŞLEM</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.AnimalID</td>
            <td>@item.AnimalName</td>
            <td>@item.AnimalDescription</td>
            <td>@item.AnimalAge</td>
            <td>@item.AnimalImage</td>
            <td>
                @Html.ActionLink("Güncelle","AnimalUpdate",new{id=item.AnimalID})
                


            </td>
        </tr>
    }
</table>
<br/>
<a href="/Admin/AnimalAdd/" class="btn btn-primary">Yeni Hayvan Ekle</a>


